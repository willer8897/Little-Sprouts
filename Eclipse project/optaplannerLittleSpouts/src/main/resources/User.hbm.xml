<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="org.lsdt.optaplannerLittleSprouts.User" table="User">
      <meta attribute="class-description">
         This class contains the user details. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="type" column="type" type="char"/>
      <property name="username" column="username" type="string"/>
      <property name="password" column="password" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="firstname" column="name_first" type="string"/>
      <property name="lastname" column="name_last" type="string"/>
      <property name="phonenumber" column="phone" type="string"/>
   </class>
</hibernate-mapping>